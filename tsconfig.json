{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": false,
    "baseUrl": "."
  },
  "lib": ["es2015"],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test",
    "node_modules"
  ],
  "paths": {
    "*": [
      "node_modules/*",
      "src/types/*"
    ]
  }
}